<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.IDM" parent="@style/Theme.AppCompat">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_idm</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.IDM</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.IDM</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.IDM</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.IDM</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.IDM</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_idm</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_idm</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.IDM</item>
    </style>

    <style name="ActionBar.Solid.IDM" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_idm</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_idm</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_idm</item>
        <item name="android:progressBarStyle">@style/ProgressBar.IDM</item>
    </style>

    <style name="ActionBar.Transparent.IDM" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_idm</item>
        <item name="android:progressBarStyle">@style/ProgressBar.IDM</item>
    </style>

    <style name="Theme.IDM.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.IDM</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.IDM</item>
    </style>

</resources>
