<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.IDM" parent="@style/Theme.AppCompat">
        <item name="actionBarItemBackground">@drawable/selectable_background_idm</item>
        <item name="popupMenuStyle">@style/PopupMenu.IDM</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.IDM</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.IDM</item>
        <item name="actionDropDownStyle">@style/DropDownNav.IDM</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.IDM</item>
        <item name="actionModeBackground">@drawable/cab_background_top_idm</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_idm</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.IDM</item>
    </style>

    <style name="ActionBar.Solid.IDM" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_idm</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_idm</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_idm</item>
        <item name="progressBarStyle">@style/ProgressBar.IDM</item>
    </style>

    <style name="ActionBar.Transparent.IDM" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_idm</item>
        <item name="progressBarStyle">@style/ProgressBar.IDM</item>
    </style>

    <style name="PopupMenu.IDM" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_idm</item>	
    </style>

    <style name="DropDownListView.IDM" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_idm</item>
    </style>

    <style name="ActionBarTabStyle.IDM" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_idm</item>
    </style>

    <style name="DropDownNav.IDM" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_idm</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_idm</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_idm</item>
    </style>

    <style name="ProgressBar.IDM" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_idm</item>
    </style>

    <style name="ActionButton.CloseMode.IDM" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_idm</item>
    </style>

    <style name="Theme.IDM.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.IDM</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.IDM</item>
    </style>

    <style name="Theme.IDM.Dialog" />

</resources>
